{
  "compilerOptions": {
    "target": "ES2020",             // Modern JS target
    "module": "ESNext",             // Output ES modules
    "moduleResolution": "node",    // Node.js resolution for modules
    "outDir": "./dist",            // Compiled output directory
    "rootDir": "./",               // Root directory for source files
    "esModuleInterop": true,       // Allow default imports for CommonJS
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "sourceMap": true
  },
  "include": ["**/*.ts"],          // Include all TypeScript files
  "exclude": ["node_modules", "dist"] // Exclude unnecessary directories
}